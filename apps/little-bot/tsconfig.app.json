{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "jsx": "react-jsx",
    "rootDir": "src",
    "types": [
      "vite/client",
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ],
    "allowJs": false,
    "strict": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "references": [
    {
      "path": "../../packages/config-testing/tsconfig.lib.json"
    },
    {
      "path": "../../packages/utils/tsconfig.lib.json"
    },
    {
      "path": "../../packages/settings/tsconfig.lib.json"
    },
    {
      "path": "../../packages/obsidian/tsconfig.lib.json"
    },
    {
      "path": "../../packages/i18n/tsconfig.lib.json"
    },
    {
      "path": "../../packages/core/tsconfig.lib.json"
    },
    {
      "path": "../../packages/commands/tsconfig.lib.json"
    },
    {
      "path": "../../packages/config-tailwind/tsconfig.lib.json"
    },
    {
      "path": "../../packages/config-eslint/tsconfig.lib.json"
    }
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "vite.config.ts",
    "vitest.config.mts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ]
}
