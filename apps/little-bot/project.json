{
  "name": "@peaks/little-bot",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/little-bot/src",
  "tags": [
    "scope:app",
    "type:app"
  ],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "inputs": [
        "production",
        "^production",
        "{projectRoot}/src/locales/**/*.json"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/obsidian-little-bot",
        "outfile": "main.js",
        "target": "es2018",
        "declaration": false,
        "format": [
          "cjs"
        ],
        "bundle": true,
        "thirdParty": true,
        "main": "apps/little-bot/src/main.ts",
        "tsConfig": "apps/little-bot/tsconfig.app.json",
        "deleteOutputPath": false,
        "assets": [
          {
            "input": "apps/little-bot/src/assets",
            "glob": "manifest.json",
            "output": ""
          },
          {
            "input": "packages/i18n/src/locales",
            "glob": "**/*.json",
            "output": "locales"
          }
        ],
        "esbuildConfig": "apps/little-bot/esbuild.config.cjs"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "build-styles": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": [
        "production",
        "^production"
      ],
      "outputs": [
        "{workspaceRoot}/dist/obsidian-little-bot/styles.css"
      ],
      "options": {
        "cwd": "{workspaceRoot}",
        "command": "pnpm --filter little-bot exec tailwindcss --minify={args.minify} --watch={args.watch} --input ./src/styles/global.css --output ../../dist/obsidian-little-bot/styles.css"
      },
      "defaultConfiguration": "production",
      "configurations": {
        "development": {
          "continuous": true,
          "args": ["--minify=false", "--watch=always"]
        },
        "production": {
          "continuous": false,
          "args": ["--minify=true", "--watch=false"]
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": [
        "build",
        "build-styles"
      ],
      "options": {
        "buildTarget": "@peaks/little-bot:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "@peaks/little-bot:build:development"
        },
        "production": {
          "buildTarget": "@peaks/little-bot:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
