{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "baseUrl": ".",
    "rootDir": "src",
    "types": [
      "node"
    ],
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true
  },
  "references": [
    {
      "path": "../../packages/config-testing/tsconfig.lib.json"
    },
    {
      "path": "../../packages/ui/tsconfig.lib.json"
    },
    {
      "path": "../../packages/config-eslint/tsconfig.lib.json"
    }
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "vitest.setup.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ]
}
