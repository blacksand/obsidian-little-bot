{
  "name": "@peaks/ui",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "sideEffects": [
    "./src/**/*.css"
  ],
  "exports": {
    "./components/*": "./src/lib/components/*.tsx",
    "./hooks": "./src/lib/hooks/index.ts",
    "./utils": "./src/lib/utils/index.ts",
    "./package.json": "./package.json"
  },
  "nx": {
    "tags": [
      "scope:shared",
      "type:ui"
    ],
    "targets": {
      "shadcn": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "{projectRoot}",
          "commands": [
            "shadcn",
            "nx run ui:lint --fix"
          ],
          "parallel": false
        }
      }
    }
  }
}
