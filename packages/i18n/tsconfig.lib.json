{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "baseUrl": ".",
    "rootDir": "src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": [
      "node"
    ],
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true
  },
  "references": [
    {
      "path": "../config-testing/tsconfig.lib.json"
    },
    {
      "path": "../utils/tsconfig.lib.json"
    },
    {
      "path": "../core/tsconfig.lib.json"
    },
    {
      "path": "../config-eslint/tsconfig.lib.json"
    }
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
